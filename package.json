{
  "name": "bonjour",
  "version": "1.0.0",
  "description": "Say some words about your project",
  "author": "Andrei",
  "license": "ISC",
  "main": "index.js",
  "scripts": {
    
    "w-sass": "sass  --no-source-map --watch src/styles:public",
    "b-sass": "sass  --no-source-map src/styles:public --style compressed",
    "w-js": "npx esbuild src/scripts/main.js --outfile=public/script.js --watch",
    "b-js": "npx esbuild src/scripts/main.js --outfile=public/script.js --minify",
    
    
    "d-js": "jsdoc -c jsdoc.json",
    "d-sass": "sassdoc src/styles/**/* -d ./docs/sassdoc",
    "docs": "npm-run-all --parallel d-*",
    "b-pages": "nunjucks-to-html --config zou.config.js --baseDir src/pages",
    "c-static": "copyfiles -u 1 \"./src/static/**/*\" \"public\"",
    "c-root": "copyfiles -u 1 \"./src/favicon.ico\" \"./src/*.txt\"   \"public\"",
    "copy": "npm-run-all --parallel c-*",
    "w-pages": "onchange \"./src/**/*\" -- npm run b-pages",
    "bin": "node bin/db",
    "watch": "npm-run-all --parallel w-*",
    "build": "npm-run-all copy bin --parallel b-*",
    "serve": "alive-server public",
    "dev": "npm-run-all copy bin b-pages --parallel watch serve",
    "postbuild": "postcss public/*.css -u autoprefixer cssnano -r --no-map" 
  },
  "dependencies": {},
  "devDependencies": {
    "sass": "^1.69.4",
    
    
    "jsdoc": "^4.0.2",
    "typescript": "^5.3.2",
    "nunjucks-to-html": "^1.1.0",
    "onchange": "^7.1.0",
    "copyfiles": "^2.4.1",
    "directory-tree": "^3.5.1",
    "html-frontmatter": "^1.6.1",
    "lodash": "^4.17.21",
    "npm-run-all": "^4.1.5",
    "alive-server": "^1.3.0",
    "postcss": "^8.4.31",
    "postcss-cli": "^10.1.0",
    "autoprefixer": "^10.4.16",
    "cssnano": "^6.0.1",
    "zoumacros": "^1.3.0",
    "zoumixins": "^1.0.0"
  }
}